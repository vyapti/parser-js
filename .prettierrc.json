{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
     "files": ["*.js", "*.jsx", "*.es", ".es6", "*.mjs"],
     "options": {
       "parser": "babel"
     }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.json"],
      "excludeFiles": ["package.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.md", "*.mdown"],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
